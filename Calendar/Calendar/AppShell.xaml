<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Calendar"
    x:Class="Calendar.AppShell">
    <TabBar>

        <ShellContent x:Name="home" Title="Home" Route="home"
                      Icon="icn_home_active.png"
                      ContentTemplate="{DataTemplate views:Home}"/>


        <ShellContent x:Name="calendar" Title="Calendar " Route="calendar"
                      Icon="icn_calendar_active"
                     ContentTemplate="{DataTemplate views:CalendarPage}" />

    </TabBar>
</Shell>
